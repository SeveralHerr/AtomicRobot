{
  "editor": {
    "formatOnSave": true,
    "tabSize": 4,
    "insertSpaces": true,
    "wordWrap": "on",
    "rulers": [80, 100],
    "trimTrailingWhitespace": true,
    "insertFinalNewline": true
  },
  "files": {
    "exclude": {
      "**/.git": true,
      "**/.godot": true,
      "**/export.cfg": true,
      "**/export_presets.cfg": true,
      "**/import": true,
      "**/node_modules": true,
      "**/tmp": true
    },
    "associations": {
      "*.gd": "gdscript",
      "*.tscn": "gdscript",
      "*.tres": "gdscript"
    }
  },
  "search": {
    "exclude": {
      "**/.git": true,
      "**/.godot": true,
      "**/export.cfg": true,
      "**/export_presets.cfg": true,
      "**/import": true,
      "**/node_modules": true,
      "**/tmp": true
    }
  }
}
